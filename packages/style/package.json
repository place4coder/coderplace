{
  "name": "@coderplace/style",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./global": {
      "default": "./dist/global.css.js",
      "import": "./dist/global.css.js",
      "types": "./dist/global.css.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build": "tsc",
    "check-types": "tsc --noEmit"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md}": "prettier --write",
    "**/*.{ts,tsx}": "eslint --fix --max-warnings 0"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@coderplace/eslint-config": "workspace:*",
    "@coderplace/typescript-config": "workspace:*",
    "@types/node": "^22.15.17",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.26.0",
    "typescript": "5.8.2"
  }
}
